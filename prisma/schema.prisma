generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @default(uuid()) @id
  login     String  
  password  String
  version   Int        @default(1)
  createdAt Int  
  updatedAt Int
}

model Artist {
  id        String    @default(uuid()) @id
  name      String
  grammy    Boolean
  albums    Album[]
  tracks    Track[]
}

model Album {
  id        String      @default(uuid()) @id
  name      String
  year      Int
  artistId  String?
  tracks    Track[]
  Artist    Artist?     @relation(fields: [artistId], references: [id])
}

model Track {
  id          String      @default(uuid()) @id
  name        String
  artistId    String?
  albumId     String?
  duration    Int
  Artist      Artist?     @relation(fields: [artistId], references: [id])
  Album       Album?      @relation(fields: [albumId], references: [id])
}

model Favorites {
  id          String      @default(uuid()) @id
  type        String
  dataId      String
}
